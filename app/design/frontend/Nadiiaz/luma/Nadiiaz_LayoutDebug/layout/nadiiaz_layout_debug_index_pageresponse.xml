<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column"
>
    <body>
        <referenceContainer name="content">
            <container name="nadiiaz.layout.debug.container" htmlTag="div" htmlClass="nadiiaz-layout-debug">
                <block class="Magento\Framework\View\Element\Template"
                       name="nadiiaz.layout.debug.text.block.with.template"
                       template="Nadiiaz_LayoutDebug::demo.phtml"
                />
                <block class="Magento\Framework\View\Element\Template"
                       name="nadiiaz.layout.debug.parent.block"
                       template="Nadiiaz_LayoutDebug::parent_block.phtml"
                />
                    <block class="Magento\Framework\View\Element\Template"
                           name="nadiiaz.layout.debug.child.block"
                           template="Nadiiaz_LayoutDebug::parent_block/child_block.phtml"
                    >
                        <arguments>
                            <argument name="boolean_parameter" xsi:type="boolean">true</argument>
                            <argument name="string_parameter" xsi:type="string">Demo string for .local website</argument>
                            <argument name="int_parameter" xsi:type="number">888</argument>
                            <argument name="float_parameter" xsi:type="number">888.88</argument>
                            <argument name="array_parameter" xsi:type="array">
                                <item name="array_element_1" xsi:type="null"/>
                                <item name="array_element_2" xsi:type="null"/>
                                <item name="array_element_3" xsi:type="string">Array Element 1</item>
                                <item name="array_element_4" xsi:type="string">Array Element 2</item>
                            </argument>
                            <argument name="options_parameter" xsi:type="options" model="Nadiiaz\LayoutDebug\Model\Options"/>
                        </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
