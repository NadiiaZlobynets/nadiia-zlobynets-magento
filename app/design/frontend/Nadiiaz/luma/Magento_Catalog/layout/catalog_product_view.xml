<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <move element="product.info.addto" destination="product.info.main" before="-"/>
        <referenceContainer name="content">
            <container name="nadiiaz.layout.debug.container" htmlTag="div" htmlClass="nadiiaz-layout-debug">
                <block name="nadiiaz.layout.debug.text.block"
                       class="Magento\Framework\View\Element\Text"
                       before="-"
                >
                    <arguments>
                        <argument name="text" translate="true" xsi:type="string"><![CDATA[{DV.Campus} Text block demo]]></argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="nadiiaz.layout.debug.text.block.with.template"
                       template="Nadiiaz_LayoutDebug::color.phtml"
                />
            </container>
        </referenceContainer>
        <referenceBlock name="product.info.addto">
            <block class="Magento\Wishlist\Block\Catalog\Product\View\AddTo\Wishlist" name="view.addto.wishlist"
                   template="Magento_Wishlist::catalog/product/view/addto/wishlist.phtml"/>
        </referenceBlock>
    </body>
</page>
