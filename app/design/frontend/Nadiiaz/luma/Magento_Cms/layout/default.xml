<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="nadiiaz.cms.container" destination="page.top" before="-"/>
        <referenceContainer name="content">
        <container name="nadiiaz.cms.container" htmlTag="div" htmlClass="nadiiaz-cms">
            <block class="Magento\Framework\View\Element\Template"
                   name="nadiiaz.cms.additional.block"
                   template="Nadiiaz_Cms::additional_block.phtml"
            >
                <arguments>
                    <argument name="demo_store" xsi:type="string" translate="true">This is a demo store by Nadiiaz for {DV.Campus}. Orders will not be accepted!</argument>
                </arguments>
            </block>
        </container>
        </referenceContainer>
    </body>
</page>
