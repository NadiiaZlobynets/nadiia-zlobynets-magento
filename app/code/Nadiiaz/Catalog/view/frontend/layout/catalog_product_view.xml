<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <move element="product.info.social" destination="page.main.title" after="-"/>
            <referenceBlock name="product.info.main">
                <block class="Magento\Framework\View\Element\Template"
                        name="nadiiaz.catalog.product.error.message.block" after="product.info.options.wrapper"
                        template="Nadiiaz_Catalog::error_message.phtml">
                    <arguments>
                        <argument name="error_message" xsi:type="string" translate="true">This is a demo product. You can add them to cart and place order only to test the Magento capabilities</argument>
                    </arguments>
                </block>
            </referenceBlock>
    </body>
</page>
