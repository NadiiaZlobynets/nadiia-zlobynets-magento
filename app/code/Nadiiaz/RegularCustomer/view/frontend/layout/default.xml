<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="request-footer-link">
                <arguments>
                    <argument name="label" xsi:type="string">Loyalty Program</argument>
                    <argument name="path" xsi:type="string">regular_customer/request/form</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="request-link" after="authorization-link">
                <arguments>
                    <argument name="path" xsi:type="string">regular_customer/requests/view</argument>
                    <argument name="label" xsi:type="string" translate="true">My Requests</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
